<script type="text/javascript"
	src="http://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_API_KEY']%>&sensor=false">
</script>
<script type="text/javascript">
	var gMap;
	$(function ()  {
		var lat_lng = new google.maps.LatLng(<%=@location.latitude%>,
			 							<%=@location.longitude%>);
	  var mapOptions = {
	    center: lat_lng,
	    zoom: 15,
	    mapTypeId: google.maps.MapTypeId.ROADMAP
	  };
	  gMap = new google.maps.Map(document.getElementById("map_canvas"),
	          mapOptions);
		var marker = new google.maps.Marker({
			position: lat_lng,
			title: "<%=@location.name%>"
		});
	
		marker.setMap(gMap);
	});
</script>


<div class="background-unit">
  <div class="container">
	  <div class="row">
      <div class="span4">
		    <div class="craig-unit">
		      <%= render 'layouts/feat_info' %>
	        <% if @attempts.empty? %>
			      <div class="hr1"></div>
		          <h1>This feat doesn't have an attempt yet.<br> Would you like to
			 					record one?</h1>
		      <% else %>
			      <div class="hr1"></div>
	          <h1>Feat Attempts:</h1>
				    <h2>
	            <ol>
							  <div class="row-fluid">
	                <% @attempts.each do |a| %>
								    <div class="span6">
	                    <% if @feat.timed %>
	                    	<li><%= link_to "#{a.user.username}", 
													user_path( a.user.id)%> - <%= a.score.to_hhmmss %>
	                    <% else %>
	                    	<li><%= link_to "#{a.user.username}", 
													user_path( a.user.id)%> - <%= a.score.to_s %>
	                  	<% end %>
								  	</div>
								  	<div class="span6">
	                  	<%= link_to "View", attempt_path(a.id) %> |
	                    <% if a.user.id == session[:user_id] %>
	                    	<% @attempt_exists = true %>
	                    	<%= link_to "Update", edit_attempt_path(a.id) %> |
	                    	<%= link_to "Delete", attempt_path(a.id), 
													confirm: 'Delete this attempt?', method: 'delete' %>
	                  	<% end %>
	                    </li>
									  </div>
	                <% end %>
								</div>
	            </ol>
				    </h2>
		      <% end %>
		      <% unless @attempt_exists %>
			      <h2><%= link_to "Record An Attempt", new_attempt_path %></h2>
		      <% end %>
		    </div>
      </div>
	    <div class="span8">
	      <div class="map-well"> 
	        <div id="map_canvas"></div>
        </div>
	    </div>
	  </div>
  </div>
</div>

	
