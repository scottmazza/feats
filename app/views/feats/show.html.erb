<script type="text/javascript"
	src="http://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_API_KEY']%>&sensor=false">
</script>
<script type="text/javascript">
	var gMap;
	$(function ()  {
		var lat_lng = new google.maps.LatLng(<%=@location.latitude%>,
			 							<%=@location.longitude%>);
	  var mapOptions = {
	    center: lat_lng,
	    zoom: 15,
	    mapTypeId: google.maps.MapTypeId.ROADMAP
	  };
	  gMap = new google.maps.Map(document.getElementById("map_canvas"),
	          mapOptions);
		var marker = new google.maps.Marker({
			position: lat_lng,
			title: "<%=@location.name%>"
		});
	
		marker.setMap(gMap);
	});
</script>
<div class="container">
  <div class="row">
    <div class="span5">
      <div class="scott-unit">
				<%= render 'layouts/feat_info' %>
				<br>
	      <br>
				<div class="row">
					<div class="span4" align="center">
						<% if @attempts.empty? %>
							<h2>This feat has no recorded attempts</h2>
							<br>
						<% else %>
							<h2>Attempts:</h2>
							<ol>
								<% @attempts.each do |a| %>
									<% if @feat.timed %>
										<li><%= link_to "#{a.user.username}", 
													user_path( a.user.id)%>: <%= a.score.to_hhmmss %>
									<% else %>
										<li><%= link_to "#{a.user.username}", 
													user_path( a.user.id)%>: <%= a.score.to_s %>
									<% end %>
									<%= link_to "View", attempt_path(a.id) %>
									<% if a.user.id == session[:user_id] %>
									  <% @attempt_exists = true %>
										<%= link_to "Update", edit_attempt_path(a.id) %>
										<%= link_to "Delete", attempt_path(a.id),
										 	confirm: 'Are you sure you want to delete this record?',
											method: 'delete' %>
									<% end %>
									</li>
								<% end %>
							</ol>
						<% end %>
					</div>
				</div>
				<% unless @attempt_exists %>
					<div class="row">
						<div class="span4" align="center">
							<%= link_to "Record an attempt on this feat", 
									new_attempt_path %>
						</div>
					</div>
				<% end %>
			</div>
    </div>
		<div id="map_canvas" class="span7"></div>
  </div>
</div>
