<div class="row">
	<% if @feat.timed %>
		<div class="span2" align="right">
			<strong>
				<%= link_to "#{@attempt.user.username.possessive}", 
					user_path(@attempt.user.id) %> time:
			</strong>
		</div>
		<div class="span2">
			<%= @attempt.score.to_hhmmss %>
		</div>
	<% else %>
		<div class="span2" align="right">
			<strong><%= link_to "#{@attempt.user.username.possessive}", 
				user_path(@attempt.user.id) %> score:
			</strong>
		</div>
		<div class="span2">
			<%= @attempt.score.to_s %>
		</div>
	<% end %>
	<% unless params[:controller] == "validations" %>
		<div class="span2"><br></div>
		<div class="span2">
			<% if @validations.empty? %>
				0 validations
			<% elsif @validations.size == 1 %>
				<strong><%= link_to "1 validation",
						validation_path %></strong>
			<% else %>
				<strong><%= link_to "#{@validations.size} validations",
						validation_path %></strong>
			<% end %>	
		</div>
	<% end %>
</div>
<% unless @attempt.image.blank? %>
	<br>
	<div class="row">
		<div class="span5">
			<%= image_tag @attempt.image_url.to_s %>
		</div>
	</div>
<% end %>
