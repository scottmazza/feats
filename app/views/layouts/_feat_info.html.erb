<h2>
	<i class="icon-map-marker"></i>
	<strong><%= @location.name %></strong>
	<br>
  <%= @location.address %>
	<div class="hr1"></div>
  <strong><%= link_to "#{@feat.name}", feat_path(@feat.id) %></strong>
  created by <%= link_to "#{@feat.user.username}", user_path(@feat.user.id) %><br>
	<br>
	<%= @feat.description %><br>
  <br>
  <% if @feat.low_score_wins %>	
    <% if @feat.timed %>
      Fastest Time Wins
    <% else %>
      Low Score Wins
  <% end %>
  <% elsif @feat.timed %>
    Longest Time Wins
  <% else %>
    High Score Wins
  <% end %>
</h2>


