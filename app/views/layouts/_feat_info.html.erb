<h2>
	<i class="icon-map-marker"></i>
	<strong><%= @location.name %></strong>
	<br>
  <%= @location.address %>
	<div class="hr1"></div>
  <strong><%= link_to "#{@feat.name}", feat_path(@feat.id) %></strong>
  created by <%= link_to "#{@feat.user.username}", user_path(@feat.user.id) %><br>
	<br>
	<div class="break-word">
	<%= @feat.description %><br>
	</div>
	<br>
  <% if @feat.low_score_wins %>	
    <% if @feat.timed %>
      Fastest time wins.
    <% else %>
      Low score wins.
  <% end %>
  <% elsif @feat.timed %>
    Longest time wins.
  <% else %>
    High score wins.
  <% end %>
</h2>


