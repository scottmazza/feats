							<br>
           		<%= submit_tag 'Use This Location', name: nil,
								class: "btn btn-small btn-primary" %>
         		</fieldset>
          <% end %>
					<h1>or</h1>
					<h2><%= link_to 'Create A New Location', new_location_path %></h2>
		  </div>
	    </div>
        <div class="span8">
	      	<div class="map-well"> 
	        	<div id="map_canvas"></div>
          </div>
	    	</div>
	  </div>
    </div>
  </div>