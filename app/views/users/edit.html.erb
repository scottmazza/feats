<div class="background-unit">
  <div class="container">
	  <div class="row-fluid">
	    <div class="span12">
        <div class="craig-unit">
		      <%= image_tag@user.image %> <%= @user.name %>
	        <%= form_for(@user) do |f| %>
	        <%= render 'shared/error_messages', target: @user %>
	          <fieldset>
						<br>
	            <div class="control-group">
	              <%= f.label :username %>
	                <div class="controls">
	                  <%= f.text_field :username %>
	                </div>
	            </div> 
	              <%= f.submit "Save Changes", class: "btn btn-small btn-primary" %>
	           </fieldset>
	        <% end %>
			  </div>
      </div>
    </div>
  </div>
</div>


