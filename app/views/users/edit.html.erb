<div class="row">
  <div class="span12">
    <div class="scott-unit">
      <h1>Edit your profile</h1>
      <br>
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', target: @user %>
        <fieldset>

          <div class="control-group">
            <%= f.label :username %>
            <div class="controls">
           <%= f.text_field :username %>
            </div>
          </div> 

          <%= f.submit "Save changes", class: "btn btn-info btn-large" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
