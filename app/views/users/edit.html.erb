<div class="background-unit">
    <div class="container">
	  <div class="row-fluid">
	    <div class="span12">
          <div class="craig-unit">
			<div class="row-fluid">
		      <%= image_tag@user.image %> <%= @user.name %>
			</div>
			<div class="row-fluid">
	        <br>
	          <%= form_for(@user) do |f| %>
	          <%= render 'shared/error_messages', target: @user %>
	            <fieldset>
	              <div class="control-group">
	                <%= f.label :username %>
	                  <div class="controls">
	                    <%= f.text_field :username %>
	                  </div>
	               </div> 
	               <%= f.submit "Save Changes", class: "btn btn-small btn-primary" %>
	             </fieldset>
	           <% end %>
			 </div>
           </div>
         </div>
       </div>
     </div>
   </div>

