<div class="background-unit">
  <div class="container">
	  <div class="row-fluid">
	    <div class="span12">
        <div class="usertop-well">
				  <h2><%= image_tag@user.image %> &nbsp;<strong><%= @user.name %></strong>, <%= @user.username %></h2>
		      <h3>
					  <% if @user.bio.blank? %>
						   &lt;none&gt;
					  <% else %>
						  <br><%= @user.bio %>
					  <% end %><br>
						<br>
						<%= @user.location %>
					</h3>
			  </div>
				<div class="staticbottom-well">
					<h2>
					  <% if @feat_count == 0 %>
			      	0 Feats Created
			      <% elsif @feat_count == 1 %>
	    	    	<%= link_to "#{@feat_count} Feat Created", feats_path( user_id: params[:id] ) %>
			      <% else %>
			      	<%= link_to "#{@feat_count} Feats Created", feats_path( user_id: params[:id] ) %>
			    	<% end %>
						<br>
			    	<% if @attempt_count == 0 %>
			      	0 Feats Attempted
			      <% elsif @attempt_count == 1 %>
			      	<%= link_to "#{@attempt_count} Feat Attempted",
			      		attempts_path( user_id: params[:id] ) %>
			      <% else %>
			      <%= link_to "#{@attempt_count} Feats Attempted",
			      	attempts_path( user_id: params[:id] ) %>
			    	<% end %>
					</h2>
					<h2>
						<br>
			    	<% if params[:id].eql?(session[:user_id].to_s ) %>
			      	<%= link_to "Edit Profile", edit_user_path( session[:user_id] ) %>
			    	<% end %>
					</h2>
		    </div>
      </div>
    </div>
  </div>
</div>