<div class="background-unit">
  <div class="container">
	  <div class="row-fluid">
	    <div class="span12">
        <div class="craig-unit">
		      <%= image_tag@user.image %> <%= @user.name %>
			    <br>
					<br>
	        <h2><strong>Username:</strong> <%= @user.username %></h2>
		      <h2>
					  <% if @feat_count == 0 %>
			      0 feats created,
			      <% elsif @feat_count == 1 %>
	    	    <%= link_to "#{@feat_count} feat created", feats_path( user_id: params[:id] ) %>
			      <% else %>
			      <%= link_to "#{@feat_count} feats created", feats_path( user_id: params[:id] ) %>
			    <% end %>
			    <br>
			    <% if @attempt_count == 0 %>
			      0 feats attempted,
			      <% elsif @attempt_count == 1 %>
			      <%= link_to "#{@attempt_count} feat attempted",
			      attempts_path( user_id: params[:id] ) %>
			      <% else %>
			      <%= link_to "#{@attempt_count} feats attempted",
			      attempts_path( user_id: params[:id] ) %>
			    <% end %>
					</h2>
					<br>
			    <% if params[:id].eql?(session[:user_id].to_s ) %>
			      <h2><%= link_to "Edit Profile", edit_user_path( session[:user_id] ) %></h2>
			    <% end %>
		    </div>
      </div>
    </div>
  </div>
</div>